{% extends 'base.html.twig' %}

{% block title %}Liste des zones{% endblock %}

{% block body %}
    <h2>Liste des zones</h2>
    <a href="{{ path('zone_new') }}">Ajouter un nouvel élément</a>

    <div class="table"><table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Zone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.zone }}</td>
                <td>
                    <a href="{{ path('zone_show', {'id': zone.id}) }}">voir</a>
                    <a href="{{ path('zone_edit', {'id': zone.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table></div>
    <a href="{{ path('zone_new') }}">Ajouter un nouvel élément</a>
{% endblock %}
