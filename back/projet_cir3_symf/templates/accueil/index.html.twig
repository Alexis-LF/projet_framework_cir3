<div class="example-wrapper">
    <h2>Recherche d'une espèce</h2>
    <form action="{{ path('accueil_recherche') }}" method="get">
        <div class="combobox_part">
            <label for="zone">Zone</label><br>
            <select name="zone">
                <option value="0">Toutes les zones</option>
            {% for zone in zones %}
                <option value="{{ zone.id }}">{{ zone.zone }}</option>
            {% endfor %}
            </select>
        </div>
        <div class="combobox_part">
            <label for="espece">Espece</label><br>
            <select name="espece">
            {% for espece in especes %}
                <option value="{{ espece.id }}">{{ espece.espece }}</option>
            {% endfor %}
            </select>
        </div>
        <div class="combobox_part">
            <input type="submit" value="Rechercher">
        </div>                
    </form> 
    
</div>
