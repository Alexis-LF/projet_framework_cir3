{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>Crit√®res de recherche :</p>
    <ul>
        <li>zone.id = {{zone_id}}</li>
        <li>espece.id = {{espece_id}}</li>
    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Nombre</th>
            <th>zone</th>
            <th>espece</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for resultat in resultats %}
        <tr title="id = {{ resultat.id }}">
            <td>{{ resultat.date }}</td>
            <td>{{ resultat.nombre }}</td>
            <td>{{ resultat.zone }}</td>
            <td>{{ resultat.espece }}</td>
            <td>
                <a href="{{ path('echouage_show', {'id': resultat.id}) }}">show</a>
                <a href="{{ path('echouage_edit', {'id': resultat.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun enregistrement pour cette recheche.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
